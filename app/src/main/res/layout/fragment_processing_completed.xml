                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxx" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/dark_grey" />

            <TextView
                android:id="@+id/aProduct"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Amount" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/dark_grey" />

            <TextView
                android:id="@+id/dProduct"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Production Date" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 April 2024, 11.02 WIB" />

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_500"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Process History" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/danger_100"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/nProcessOne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@id/checkboxOne"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toStartOf="@+id/checkboxOne"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:text="Process 1" />

                        <TextView
                            android:id="@+id/dProcessOne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="@+id/nProcessOne"
                            card_view:layout_constraintStart_toStartOf="@+id/nProcessOne"
                            card_view:layout_constraintTop_toBottomOf="@+id/nProcessOne"
                            android:text="Deskripsi Process 1" />

                        <CheckBox
                            android:id="@+id/checkboxOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:checked="true"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/primary_100"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/nProcessTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@id/checkboxTwo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toStartOf="@+id/checkboxTwo"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:text="Process 2" />

                        <TextView
                            android:id="@+id/dProcessTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="@+id/nProcessTwo"
                            card_view:layout_constraintStart_toStartOf="@+id/nProcessTwo"
                            card_view:layout_constraintTop_toBottomOf="@+id/nProcessTwo"
                            android:text="Deskripsi Process 2" />

                        <CheckBox
                            android:id="@+id/checkboxTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:checked="true"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/warning_100"
                        android:padding="8dp">


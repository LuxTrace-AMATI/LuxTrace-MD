                            android:id="@+id/nProcessThree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@id/checkboxThree"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toStartOf="@+id/checkboxThree"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:text="Process 3" />

                        <TextView
                            android:id="@+id/dProcessThree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="@+id/nProcessThree"
                            card_view:layout_constraintStart_toStartOf="@+id/nProcessThree"
                            card_view:layout_constraintTop_toBottomOf="@+id/nProcessThree"
                            android:text="Deskripsi Process 3" />

                        <CheckBox
                            android:id="@+id/checkboxThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:checked="true"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/info_100"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/nProcessFour"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@id/checkboxFour"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toStartOf="@+id/checkboxFour"
